
#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    double N;
    double result = 0;

    while (true)
    {
        cout << "Enter N(> 0): ";
        cin >> N;
        if (N > 0)
        {
            break;
        }
        else
        {
            cout << "Try again" << endl;
        }
    }

    for (int i = 1; i <= N; i++)
    {
        result += pow(i, i);
    }

    cout << "Result = " << result << endl;
}
